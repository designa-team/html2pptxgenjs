{
  "name": "@designa/html2pptxgenjs",
  "description": "Convert HTML into PptxGenJS text",
  "main": "dist/html2pptxgenjs.cjs.js",
  "scripts": {
    "build": "rollup --config rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/designa-team/html2pptxgenjs"
  },
  "author": "Ulises Medrano",
  "license": "MIT",
  "dependencies": {
    "@adobe/css-tools": "^4.4.1",
    "htmlparser2": "^4.1.0",
    "parse-color": "^1.0.0"
  },
  "devDependencies": {
    "pptxgenjs": "^3.1.1",
    "rollup-plugin-terser": "^5.3.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/npm",
        {
          "tarballDir": "dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failComment": false,
          "failTitle": false,
          "labels": false,
          "assets": [
            { "path": "dist/**", "label": "JS distribution" }
          ]
        }
      ]
    ]
  }
}
